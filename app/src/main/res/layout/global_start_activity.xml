<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/news_detail_app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/global_start_collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp"
            app:title=""
            android:fitsSystemWindows="true">

            <ImageView
                android:id="@+id/global_start_image"
                android:src="@drawable/newintro"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="fitXY"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax"/>

            <android.support.v7.widget.Toolbar
                android:id="@+id/global_start_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="pin" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>



    <android.support.v4.widget.NestedScrollView
                android:id="@+id/news_detail_scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:background="@color/colorLightWhite"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="6dp"
                        app:cardUseCompatPadding="true"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >


                            <TextView
                                android:id="@+id/global_start_title"
                                android:autoLink="web|all"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:background="@color/colorPrimary"
                                android:textColor="@color/white"
                                android:textSize="22dp"
                                android:text="Can you imagine a day when the teenagers of your country would have the opportunity to ... "

                                android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_marginTop="20dp"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_marginLeft="40dp"
                                    android:gravity="center_vertical"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_width="10dp"
                                        android:layout_height="10dp"
                                        android:background="@color/colorAccent"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="#000000"
                                        android:textSize="@dimen/text_size2"
                                        android:layout_marginLeft="10dp"
                                        android:text="Hear the gospel"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_marginLeft="40dp"
                                    android:gravity="center_vertical"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_width="10dp"
                                        android:layout_height="10dp"
                                        android:background="@color/colorAccent"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="#000000"
                                        android:textSize="@dimen/text_size2"
                                        android:layout_marginLeft="10dp"
                                        android:text="Respond by faith"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_marginLeft="40dp"
                                    android:gravity="center_vertical"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_width="10dp"
                                        android:layout_height="10dp"
                                        android:background="@color/colorAccent"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="#000000"
                                        android:textSize="@dimen/text_size2"
                                        android:layout_marginLeft="10dp"
                                        android:text="Walk with God"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_marginLeft="40dp"
                                    android:gravity="center_vertical"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_width="10dp"
                                        android:layout_height="10dp"
                                        android:background="@color/colorAccent"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="#000000"
                                        android:textSize="@dimen/text_size2"
                                        android:layout_marginLeft="10dp"
                                        android:text="Become spiritual multipliers"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_marginLeft="100dp"
                                    android:layout_marginRight="100dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@color/colorPrimaryDark">

                                </LinearLayout>
                                <ds.gcme.com.globalstart.Helpers.MyHtmlTextView
                                    android:id="@+id/intro_page_2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="20dp"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size2"
                                    android:text="@string/intro_page_2"
                                    />
                            </LinearLayout>

                            <Button
                                android:id="@+id/btn_next"
                                android:layout_marginBottom="4dp"
                                android:layout_width="wrap_content"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:background="@color/colorOrange"
                                android:text="Next"/>
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>


            </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>